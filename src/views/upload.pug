        span=errorMessage
    form(method="POST") 
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", requried, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by ,",  required, type="text", name="hashtags")
        input(type="submit", value="Upload")